= form_for @word do |f|
  -if @word.errors.any?
    #error_explanation
      %h2= "#{pluralize(@word.errors.count, "error")} prohibited this word from being saved:"
      %ul
        - @word.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :word_core
    = f.collection_select :word_core_id, WordCore.all, :id, :infinitive
  .actions
    = f.submit 'Save'
